    <script>
        function toggleDarkMode() {
            var body = document.body;
            body.classList.toggle('dark-mode');
            body.classList.toggle('light-mode');
            if (body.classList.contains('dark-mode')) {
                body.classList.add('background-image-dark-mode');
                body.classList.remove('background-image-light-mode');
            } else {
                body.classList.add('background-image-light-mode');
                body.classList.remove('background-image-dark-mode');
            }
        }
    </script>
</head>
<body>
    <div class="container">
        <h1>Settings</h1>
        <h2>Dark mode: 
            <label class="switch">
                <input type="checkbox" onclick="toggleDarkMode()">
                <span class="slider"></span>
            </label>
        </h2>
        <h2>Font color: 
            <select onchange="document.body.className = this.value;">
                <option value="dark-mode">Black</option>
                <option value="light-mode">White</option>
            </select>
        </h2>
    </div>
</body>
</html>
